
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="~/Content/CSS/login.css" rel="stylesheet" />
</head>
<body>

    <div class="login-container">
        <form action="@Url.Action("login","Acceso")" method="post">
            <div class="form-group">
                <label for="usuario">Usuario:</label>
                <input type="text" id="usuario" name="num_identidad" required>
            </div>
            <div class="form-group">
                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="pass_usser" required>
            </div>
            <div class="form-group">
                <button type="submit">Iniciar Sesión</button>
            </div>
        </form>
        <div class="register-link">
            ¿No tienes una cuenta? <a href="@Url.Action("Registro","Acceso")">Regístrate aquí</a>.
        </div>
    </div>

</body>
</html>
